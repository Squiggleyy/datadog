FROM node:18.0-slim
COPY . .
#CMD npm install
RUN npm install
# install tracer
CMD  ["npm", "install", "dd-trace --save"]
#RUN npm install dd-trace --save
#CMD npm install --save express 
# talk to local agent service - this is probably it - see readme on how to find it
ENV DD_AGENT_HOST="datadog-agent"
# correlation tags
ENV DD_SERVICE="knote"
ENV DD_VERSION="1"
ENV DD_ENV="lab"
# code profiling
ENV DD_PROFILING_ENABLED="true"
# runtime metrics
ENV DD_RUNTIME_METRICS_ENABLED="true"
CMD node --require dd-trace/init index.js
#CMD node index.js